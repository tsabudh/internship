const NUMBER_OF_BOXES=1;
const BOX_1_DIMENSION= {height:100 , width:100};
const BOX_2_DIMENSION= {height:100 , width:100};
//DOM manipulation
const domFunction = (element, className, text, targetId) => {
    var element = document.createElement(element);
    element.className = className;
    element.appendChild(document.createTextNode(text));
    document.querySelector(targetId).appendChild(element);
  };
domFunction('div','container','','.main-container');
domFunction('div','box box1','','.container');
domFunction('div','box box2','','.container');
let incrementX=15;   //increament must be less than box-width
let incrementY=8;
let marginLeftOfBox=0;
let marginTopOfBox=0;
let directionX=1;
let directionY=1;
const moveBoxHorizontal=()=>{
    let position=document.querySelector('.box1');
    // console.log(position.style.marginLeft,'horizontal');
    if(position.style.marginLeft.split('px')[0]>=CONTAINER_WIDTH-BOX_1_DIMENSION.width){
        directionX=-1;
    }
    else if(position.style.marginLeft.split('px')[0]<=0){
        directionX=1;
    }
    marginLeftOfBox = marginLeftOfBox + ( incrementX * directionX);
    position.style.marginLeft = marginLeftOfBox + 'px';
}
const moveBoxVertical=()=>{
    let position=document.querySelector('.box1');
    // console.log(position.style.marginTop, 'vertical');
    if(position.style.marginTop.split('px')[0]>=CONTAINER_WIDTH-BOX_1_DIMENSION.width){   //marginTop comapre till 500
        directionY=-1;
    }
    else if(position.style.marginTop.split('px')[0]<=0){
        directionY=1;
    }
    marginTopOfBox = marginTopOfBox + ( incrementY * directionY);
    position.style.marginTop = marginTopOfBox + 'px';
}
let leftMost;
let topMost;
const compareHorizontalBox=()=>{
   let box1=document.querySelector('.box1');
   let box2=document.querySelector('.box2');
   let cssStyleObj1 = window.getComputedStyle(box1);
  let imgWidth1 = cssStyleObj1.getPropertyValue("margin-left");
  console.log(imgWidth1,'Box-1 ML');
  let cssStyleObj2 = window.getComputedStyle(box2);
  let imgWidth2 = cssStyleObj2.getPropertyValue("margin-left");
  console.log(imgWidth2,'Box-2 ML');
  console.log(imgWidth1.split('px')[0]>imgWidth2.split('px')[0]?"Box-1 is leftmost":"Box-2 is leftmost")
}
const compareVerticalBox=()=>{
    let box1=document.querySelector('.box1');
    let box2=document.querySelector('.box2');
    let cssStyleObj1 = window.getComputedStyle(box1);
   let imgWidth1 = cssStyleObj1.getPropertyValue("margin-top");
   console.log(imgWidth1,'Box-1 MT');
   let cssStyleObj2 = window.getComputedStyle(box2);
   let imgWidth2 = cssStyleObj2.getPropertyValue("margin-top");
   console.log(imgWidth2,'Box-2 MT');
}
setInterval(moveBoxHorizontal,50);
setInterval(moveBoxVertical,50)
setInterval(compareHorizontalBox,10000);
setInterval(compareVerticalBox,10000);